<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rzsavilla.onetapgame" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.SplashActivity"
            android:label="@string/title_activity_splash"
            android:noHistory="true"> <!--Prevents back button from return to this activity -->
        </activity>
        <activity
            android:name=".controller.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name=".controller.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".controller.StartActivity"
            android:label="@string/title_activity_start" >
        </activity>
    </application>

</manifest>
